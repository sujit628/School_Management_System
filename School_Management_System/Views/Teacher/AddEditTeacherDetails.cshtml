@model School_Management_System.Models.TeacherDetails@{    ViewBag.Title = "AddEditTeacherDetails";
    Layout = "~/Views/Shared/_TeachersLayout.cshtml";}<div class="container-fluid">    <div class="w-100 m-auto shadow p-3 mb-5 bg-body-tertiary rounded">        <h2 class="text-center fw-bold mb-3">Add <span class="text-primary"> Teacher</span></h2>        <form method="post" action="/Teacher/AddEditTeacherDetails" enctype="multipart/form-data" class="ms-4">            @Html.TextBoxFor(m => m.TeacherID, new { @class = "d-none" })            <div class="row row-cols-4 my-3 ">                <div class="col-md-6">                    <label class="form-label">Full Name:</label>                    @Html.TextBoxFor(m => m.TeacherName, new { @class = "form-control m-auto" })                </div>                <div class="col-md-6">                    <label class="form-label">Age:</label>                    @Html.TextBoxFor(m => m.TeacherAge, new { @class = "form-control m-auto" })                </div>            </div>            <div class="row row-cols-4 my-3 ">                <div class="col-md-6">                    <label class="form-label">Contact No:</label>                    @Html.EditorFor(m => m.TeacherContactNo, new { htmlAttributes = new { @class = "form-control m-auto" } })                </div>                <div class="col-md-6">                    <label class="form-label">Teacher Address:</label>                    @Html.TextAreaFor(m => m.TeacherAddress, new { @class = "form-control m-auto", @rows = "1" })                </div>            </div>            <div class="row row-cols-4 my-3">                <div class="col-md-6 ">                    <label class="form-label">Gender:</label><br />                    Male:     @Html.RadioButtonFor(m => m.TeacherGender, "Male", new { @id = "male" })                    Female:   @Html.RadioButtonFor(m => m.TeacherGender, "Female", new { @id = "female" })                </div>                <div class="col-md-6 ">                    <label class="form-label">Qualification:</label>                    @Html.EditorFor(m => m.TeacherQualification, new { htmlAttributes = new { @class = "form-control m-auto" } })                </div>            </div>            <div class="row row-cols-4 my-3 ">                <div class="col-md-6">                    <label class="form-label">Country:</label>                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control m-auto" })                </div>                <div class="col-md-6">                    <label class="form-label">State:</label>                    @Html.TextBoxFor(m => m.State, new { @class = "form-control m-auto" })                </div>            </div>            <div class="row row-cols-2 my-3">                <div class="col-md-6">                    <label class="form-label">Pin:</label>                    @Html.TextBoxFor(m => m.Pin, new { @class = "form-control m-auto" })                </div>                <div class="col-md-6">                    <label class="form-label">Teacher's Photo:</label>                    @Html.TextBoxFor(m => m.TeacherImage, new { @class = "form-control m-auto", @type = "file" })                    @Html.TextBoxFor(m => m.ImagePriview, new { @class = "d-none" })                </div>            </div>            <div class="row row-cols-4 my-3 ">                @if (ViewBag.joiningDate != null)                {    <div class="col-md-6">        <label class="form-label">Joining Date:</label>        <input type="date" value="" name="JoiningDate" id="JoiningDate" class="form-control" />    </div>    <div class="col-md-6">        <label class="form-label">Leaving Date:</label>        @Html.TextBoxFor(m => m.UpdatedDate, new { @class = "form-control m-auto", @type = "Date", @disabled = "true" })    </div>}else{    <div class="col-md-6">        <label class="form-label">Joining Date:</label>        <input type="date" value="@(((DateTime?)Model.JoiningDate)!=null?((DateTime)Model.JoiningDate).ToString("yyyy-MM-dd"):"")" name="JoiningDate" id="JoiningDate" class="form-control" />    </div>    <div class="col-md-6">        <label class="form-label">Leaving Date:</label>        <input type="date" value="@(((DateTime?)Model.LeavingDate)!=null?((DateTime)Model.LeavingDate).ToString("yyyy-MM-dd"):"")" name="LeavingDate" id="LeavingDate" class="form-control" />    </div>}            </div>            <div class="row row-cols-2 my-3">                <div class="col-md-6">                    <label class="form-label"> Email Id:</label>                    @Html.EditorFor(m => m.TeacherEmail, new { htmlAttributes = new { @class = "form-control m-auto" } })                </div>                <div class="col-md-6">                    <label class="form-label">Password:</label>                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control m-auto" })                </div>            </div>            @if (ViewBag.joiningDate == null)            {    <div class="row row-cols-2 my-3">        <div class="col-md-3">            Is Teacher Active        </div>        <div class="col-md-3">            @Html.CheckBoxFor(m => m.IsActive, new { htmlAttributes = new { @class = "m-auto" } })        </div>    </div>}            <p class="text-center">                <button type="submit" class="btn btn-primary ">Save</button>            </p>        </form>    </div></div>