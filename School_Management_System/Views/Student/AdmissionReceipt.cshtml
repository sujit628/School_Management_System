          <li style="font-weight: 600; font-family: fangsong; font-size: 20px;"><span class="">Student Email: </span>@Model.Email</li>            </ul>        </div>        <div class="" style="flex-grow:3">            <ul class="" style="list-style: none;">                <li style="font-weight: 600; font-family: fangsong; font-size: 20px;"><span class="">Date of Birth : </span>@(((DateTime)Model.DOB).ToString("dd-MM-yyyy"))</li>                <li style="font-weight: 600; font-family: fangsong; font-size: 20px;"><span class="">Address: </span>@Model.Adrress</li>            </ul>        </div>    </div>    <div class="">        <span style="font-style: oblique;">All the Subject of class @ViewBag.classdata.ClassName given below :-</span>        <table id="table" class="" style=" box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); cursor: pointer; width: 100%; border-collapse: collapse;">            <thead class="" style="background-color: rgb(13,202,240);">                <tr style="background-color: rgb(13,202,240);">                    @if (ViewBag.classdata.Sub1 != "")                    {        <th>Subject1</th>    }                    @if (ViewBag.classdata.Sub2 != "")                    {        <th>Subject2</th>    }                    @if (ViewBag.classdata.Sub3 != "")                    {        <th>Subject3</th>    }                    @if (ViewBag.classdata.Sub4 != "")                    {        <th>Subject4</th>    }                    @if (ViewBag.classdata.Sub5 != "")                    {        <th>Subject5</th>    }                    @if (ViewBag.classdata.Sub6 != "")                    {        <th>Subject6</th>    }                    @if (ViewBag.classdata.Sub7 != "")                    {        <th>Subject7</th>    }                    @if (ViewBag.classdata.Sub8 != "")                    {        <th>Subject8</th>    }                    @if (ViewBag.classdata.Sub9 != "")                    {        <th>Subject9</th>    }                    @if (ViewBag.classdata.Sub10 != "")                    {        <th>Subject10</th>    }                    @if (ViewBag.classdata.Sub11 != "")                    {        <th>Subject11</th>    }                    @if (ViewBag.classdata.Sub12 != "")                    {        <th>Subject12</th>    }                </tr>            </thead>            <tbody id="tbody">                <tr>                    @if (ViewBag.classdata.Sub1 != "")                    {        <td> @ViewBag.classdata.Sub1</td>    }                    @if (ViewBag.classdata.Sub2 != "")                    {        <td> @ViewBag.classdata.Sub2</td>    }                    @if (ViewBag.classdata.Sub3 != "")                    {        <td> @ViewBag.classdata.Sub3</td>    }                    @if (ViewBag.classdata.Sub4 != "")                    {        <td> @ViewBag.classdata.Sub4</td>    }                    @if (ViewBag.classdata.Sub5 != "")                    {        <td> @ViewBag.classdata.Sub5</td>    }                    @if (ViewBag.classdata.Sub6 != "")                    {        <td> @ViewBag.classdata.Sub6</td>    }                    @if (ViewBag.classdata.Sub7 != "")                    {        <td> @ViewBag.classdata.Sub7</td>    }                    @if (ViewBag.classdata.Sub8 != "")                    {        <td> @ViewBag.classdata.Sub8</td>    }                    @if (ViewBag.classdata.Sub9 != "")                    {        <td> @ViewBag.classdata.Sub9</td>    }                    @if (ViewBag.classdata.Sub10 != "")                    {        <td> @ViewBag.classdata.Sub10</td>    }                    @if (ViewBag.classdata.Sub11 != "")                    {        <td> @ViewBag.classdata.Sub11</td>    }                    @if (ViewBag.classdata.Sub12 != "")                    {        <td> @ViewBag.classdata.Sub12</td>    }                </tr>            </tbody>        </table>    </div>    <div style="border-top: 1.5px solid black; border-top-style: dashed;margin-top:10px;">        <h5 class="" style="text-align: center; font-weight: 600; margin-top: 10px; "><span style="border-bottom: 2px solid grey; padding-left:10px;padding-right:10px;">For Office Use Only</span>  </h5>        <div class="" style="margin-top:22px;">            <ul class="" style="list-style: none;">                <li style="font-weight: 300; font-family: fangsong; font-size: 17px;"><span class="">Admission Fee : </span>@ViewBag.classdata.AdmissionFee</li>                <li style="font-weight: 300; font-family: fangsong; font-size: 17px;"><span class="">Student Name : </span>@Model.Full_Name</li>                <li style="font-weight: 300; font-family: fangsong; font-size: 17px;"><span class="">Student Class : </span>@Model.Class</li>                <li style="font-weight: 300; font-family: fangsong; font-size: 17px;"><span class="">Date of Admission : </span>@(((DateTime)Model.DateEntered).ToString("dd-MM-yyyy"))</li>                <li style=" font-weight: 300; font-family: fangsong; font-size: 17px;"><span></span>Date :<span style="float: inline-end; margin-right: 30px; border-top: 1px solid black; border-top-style: dashed; padding-left: 15px; padding-right: 15px; ">Signature  </span></li>            </ul>        </div>    </div>    <div style="margin-top:30px;" id="goBack">        <p style="">            <a href="@Url.Action("StudentPanel","Student")" style=" background: linear-gradient(to right, #007BFF, #00BFFF); padding:3px;border-radius:5px; text-decoration: none; color: white;">Go Back</a>        </p>    </div></div><script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script><script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script><script>    function generatePDF(button) {        const { jsPDF } = window.jspdf;        const doc = new jsPDF();        const pdfPortion = button.closest(".AdmissionReceipt");        button.style.display = 'none';        document.getElementById("goBack").style.display = "none";        html2canvas(pdfPortion).then(canvas => {            const imgData = canvas.toDataURL('image/png');            doc.addImage(imgData, 'PNG', 10, 20, 190, 130);            doc.save('AdmissionReceipt.pdf');        });        button.style.display = 'block';        document.getElementById("goBack").style.display = "block";    }</script>