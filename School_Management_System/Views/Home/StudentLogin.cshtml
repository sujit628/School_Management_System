@model School_Management_System.Models.student


@{
    ViewBag.Title = "StudentLogin";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    /* body {
        background-image: url('../../content/background-img.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        height: 100vh; /Home/studentRegistration
    }*/
</style>

<style>
    body {
        background: linear-gradient(135deg, #007BFF, #00C1E3);
        color: #fff;
    }
</style>

<div class="container-fluid d-flex justify-content-center align-items-center" id="bg" style="height:96vh;">
    <div class="container px-5 d-flex align-items-center justify-content-center border rounded-5 shadow my-5" style="height: 50vh;background-color:aliceblue; width:35vw;">
        @using (Html.BeginForm())
        {
            <h4 class="text-center fst-italic text-danger my-1 "><span style="color:blue">Student </span>Login</h4>
            <div class="row">
                <div class="col-12">
                    @Html.LabelFor(x => x.Email, htmlAttributes: new { @class = "col-form-label text-dark" })
                    @Html.EditorFor(x => x.Email, new { HtmlAttributes = new { @class = "form-control " } })
                </div>
                <div class="col-12">
                    @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "col-form-label text-dark" })
                    @Html.EditorFor(x => x.Password, new { HtmlAttributes = new { @class = "form-control" } })
                    @*<span><a href="/Home/StudentSignup" class="text-decoration-none">New Registration ?</a></span>*@
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-3">
                    <button type="submit" class="btn btn-primary mt-3 my-2">LogIn</button>
                </div>
            </div>
        }
    </div>
</div>


